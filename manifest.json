{
    "manifest_version": 3,
    "name": "ChatGPT Query Extension",
    "version": "1.0",
    "description": "Ask questions to ChatGPT from your browser.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "ex(16x16).png",
            "48": "ex(48x48).png",
            "128": "ex(128x128).png"
        }
    },
    "icons": {
        "48": "icon.png"
    }
}

